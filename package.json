{
  "name": "rich-haines-digital-garden",
  "description": "This is my digital garden",
  "version": "1.0.1",
  "repository": "https://github.com/molebox/rich-haines-digital-garden.git",
  "author": "Rich Haines",
  "main": "next.config.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "postbuild": "next-on-netlify",
    "format": "yarn format:index && yarn format:pages && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:pages": "prettier --write \"pages/**/*.js\"",
    "format:src": "prettier --write \"src/**/*.{js,md,mdx}\""
  },
  "dependencies": {
    "@chakra-ui/core": "^1.0.0-rc.2",
    "@chakra-ui/theme": "^1.0.0-rc.2",
    "@jlengstorf/get-share-image": "^0.7.1",
    "fast-glob": "^3.2.4",
    "fuse.js": "^6.4.1",
    "gray-matter": "^4.0.2",
    "gsap": "^3.5.1",
    "js-cookie": "^2.2.1",
    "mdx-embed": "^0.0.14",
    "next": "^9.5.2",
    "next-cookies": "^2.0.3",
    "next-mdx-remote": "^1.0.0",
    "next-on-netlify": "^2.3.2",
    "next-react-svg": "^1.1.2",
    "next-seo": "^4.7.3",
    "next-transpile-modules": "^4.1.0",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-draggable": "^4.4.3",
    "react-helmet": "^6.1.0",
    "react-icons": "^3.11.0",
    "react-rough-notation": "^0.1.1",
    "react-three-fiber": "^5.0.6",
    "three": "^0.121.1",
    "use-cloudinary": "^3.1.6"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "pages/**/*.js": [
      "prettier --write"
    ],
    "src/**/*.{js,md,mdx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "keywords": [
    "nextjs",
    "mdx"
  ],
  "license": "ISC"
}
